= form_for @user, :html => { :class => 'form-horizontal' } do |f|
	-if @user.errors.any?
		%div{class: "alert alert-error"}
			%a{class:"close", "data-dismiss" => "alert"}x
			%h2
				%storng= "#{pluralize(@user.errors.count, "error")} prohibited this form from being saved:"
			%ul
				- @user.errors.full_messages.each do |msg|
					%li= msg
	.control-group
		= f.label :name, :class => 'control-label'
		.controls
			= f.text_field :name, :class => 'text_field'
	.control-group
		= f.label :email, :class => 'control-label'
		.controls
			= f.text_field :email, :class => 'text_field'
	.control-group
		= f.label :password, :class => 'control-label'
		.controls
			= f.text_field :password, :class => 'text_field'
	.form-actions
		= f.submit nil, :class => 'btn btn-primary'
		= link_to t('.cancel', :default => t("helpers.links.cancel")), users_path, :class => 'btn'

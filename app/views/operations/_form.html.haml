= form.fields_for :operations, :html => { :class => 'form-horizontal' } do |operation_form|
	.control-group
		= operation_form.label :numbers, :class => 'control-label'
		.controls
			= operation_form.text_area :numbers, :class => 'text_area'
	.control-group
		= operation_form.label :operator, :class => 'control-label'
		.controls
			= operation_form.text_field :operator, :class => 'text_field'
	.control-group
		= operation_form.label :align, :class => 'control-label'
		.controls
			= operation_form.text_field :align, :class => 'text_field'

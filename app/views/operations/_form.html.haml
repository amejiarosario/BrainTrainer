= form_for @operation, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :numbers, :class => 'control-label'
    .controls
      = f.text_area :numbers, :class => 'text_area'
  .control-group
    = f.label :operator, :class => 'control-label'
    .controls
      = f.text_field :operator, :class => 'text_field'
  .control-group
    = f.label :align, :class => 'control-label'
    .controls
      = f.text_field :align, :class => 'text_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), operations_path, :class => 'btn'

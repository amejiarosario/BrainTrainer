!!! 5
%html(lang="en")
	%head
		%meta(charset="utf-8")
		%meta(name="viewport" content="width=device-width, initial-scale=1.0")
		%title= content_for?(:title) ? yield(:title) : "BrainTrainer"
		= csrf_meta_tags
		/ Le HTML5 shim, for IE6-8 support of HTML elements
		/[if lt IE 9]
			= javascript_include_tag "http://html5shim.googlecode.com/svn/trunk/html5.js"
		= stylesheet_link_tag "application", :media => "all"
		%link(href="images/favicon.ico" rel="shortcut icon")
		%link(href="images/apple-touch-icon.png" rel="apple-touch-icon")
		%link(href="images/apple-touch-icon-72x72.png" rel="apple-touch-icon" sizes="72x72")
		%link(href="images/apple-touch-icon-114x114.png" rel="apple-touch-icon" sizes="114x114")

	%body
		.navbar.navbar-fixed-top
			.navbar-inner
				.container
					%a.btn.btn-navbar(data-target=".nav-collapse" data-toggle="collapse")
						%span.icon-bar
						%span.icon-bar
						%span.icon-bar
					%a.brand(href="/home/train") BrainTrainer
					.container.nav-collapse
						%ul.nav
							%li= link_to "Train", home_train_path
							%li= link_to "Score", home_score_path
							%li= link_to "About", home_about_path

		.container

			.content
				.row
					.span9
						-# E.g. redirect_to e, flash: { error: 'You got less than the 80% correct. Please try again.', notice: "fix it!", info: ["info1", "info2"]}
						-if flash.any?
							- flash.each do |klass, msg|
								%div{class: "alert alert-#{klass}"}
									%a{class:"close", "data-dismiss" => "alert"}x
									%h2
										- num = ((msg.respond_to?(:each))? msg.size : 1).to_i
										%strong= "#{pluralize( num, klass.to_s)}:"
									%ul
										- if msg.respond_to? :each
											- msg.each do |m|
												%li= m
										- else
											%li= msg					
						= yield
					.span3
						.well.sidebar-nav
							%h3 Sidebar
							%ul.nav.nav-list
								%li.nav-header Admin
								%li= link_to "Exercises List", exercises_path
								%li= link_to "Add Exercise", new_exercise_path
								%li= link_to "Edit Users", users_path
			%footer
				%hr
				= "Copyright Â© 2011-#{Time.now.year} by "																																													
				= link_to "Adrian Mejia", "http://adrianmejia.com"
				All Rights Reserved.

				- if Rails.env.development?
					%hr
					= debug(params) 			
					%br
					= debug(flash)
		/
			Javascripts
			\==================================================
		/ Placed at the end of the document so the pages load faster
		= javascript_include_tag "application"
